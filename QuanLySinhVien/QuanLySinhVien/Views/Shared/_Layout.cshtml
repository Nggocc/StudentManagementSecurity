@using QuanLySinhVien.Models
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        .table th {
            background-color: lightblue;
        }
        /* Kiểu cho các mục dropdown */
        .dropdown {
            position: relative;
            display: inline-block;
        }

        /* Kiểu cho menu dropdown */
        .dropdown-content {
            display: none;
            position: absolute;
            background-color: #f9f9f9;
            min-width: 160px;
            box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
            z-index: 1;
            border-radius: 6px;
        }

            /* Kiểu cho các mục trong menu dropdown */
            .dropdown-content a {
                color: black;
                margin: 0;
                padding: 10px;
                width: 200px;
                text-decoration: none;
                display: block;
                text-align: left;
            }

        /* Hiển thị menu dropdown khi di chuột vào */
        .dropdown:hover .dropdown-content {
            display: block;
        }

        /* Hiển thị submenu khi di chuột vào mục con */
        .dropdown-submenu:hover .dropdown-content {
            display: block;
            left: 100%;
            top: 0;
        }

        /* Đảm bảo submenu nằm ngang bên phải của mục chính */
        .dropdown-submenu {
            position: relative;
        }
        .navbar a{
            color: darkblue;
        }
        .navbar a:hover, .dropdown:hover .dropbtn {
            color: orange;
        }

        .dropdown-content a:hover {
            text-decoration: underline;
        }
        footer{
            position: fixed;
            bottom: 0;
            width: 100%;
        }
        footer p {
            font-size: 15px;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm " style="background-color: darkblue">
        <div class="container">
            <ul class="navbar-nav text-black w-100 d-flex justify-content-between align-items-center">
                <li class="nav-item">
                    <a href="@Url.Action("Index", "sinhviens")">
                        <img src="~/Content/Images/logo-haui.png" width="60" style="margin-right: 10px;" />
                    </a>
                </li>
                <li class="nav-item"><b><a href="@Url.Action("Index", "sinhviens")" class="nav-link" style="color: white; font-size: 25px">QUẢN LÝ SINH VIÊN</a></b></li>
                <li class="nav-item flex-grow-1 d-flex justify-content-center">
                    @using (Html.BeginForm("TimKiem", "sinhviens", FormMethod.Post))
                    {
                        <div class="justify-content-xxl-center">
                            <input type="text" name="key" style="width:580px ;background-color: beige; border-radius: 50px; border-color: white; padding:3px 10px;" placeholder="Nhập từ khóa ...">
                            <input type="submit" style="background-color: #0FC2C2; color: white; font-weight: bold; border-radius: 50px; width: 100px; border-color: white" value="Tìm kiếm" />

                        </div>
                    }

                </li>
            </ul>
        </div>
    </nav>

    <nav class="navbar navbar-expand-sm navbar-toggleable-sm ">
        <div class="container">
            <ul class="navbar-nav d-flex justify-content-center w-100 fw-bold text-black">
                <li style="margin: 0px 10px">@Html.ActionLink("Sinh viên", "Index", "sinhviens", new { area = "" }, new { @class = "nav-link" }) </li>
                <li style="margin-top: 5px">&nbsp;|&nbsp;</li>
                <li style="margin: 0px 10px">@Html.ActionLink("Lớp học", "Index", "lophocs", new { area = "" }, new { @class = "nav-link" }) </li>
                <li style="margin-top: 5px">&nbsp;|&nbsp;</li>
                <li style="margin: 0px 10px">@Html.ActionLink("Giảng viên", "GiangVien", "lophocs", new { area = "" }, new { @class = "nav-link" })</li>
                <li style="margin-top: 5px">&nbsp;|&nbsp;</li>
                @{
                    if (Session["taikhoan"] == null)
                    {
                        <li style="margin: 0px 10px">@Html.ActionLink("Đăng nhập", "DangNhap", "DangNhap", new { area = "" }, new { @class = "nav-link" })</li>

                    }
                    else
                    {
                        DBContext db = new DBContext();
                        taikhoan tk = (taikhoan)Session["taikhoan"];
                        giangvien gv = db.giangviens.FirstOrDefault(m => m.tenDangNhap == tk.tenDangNhap);
                        <li style="margin: 0 10px" class="nav-item">
                            <div class="dropdown">
                                <a href="#" class="dropbtn nav-link" style="color: orange;">@gv.hoTen</a>
                                <div class="dropdown-content">
                                    <a href="@Url.Action("DangXuat", "DangNhap")">Đăng xuất</a>
                                    <a href="@Url.Action("TaiKhoanCuaToi", "DangNhap")">Tài khoản của tôi</a>
                                </div>
                            </div>
                        </li>

                    }


                }

            </ul>
        </div>
    </nav>
    <div class="container body-content" style="padding: 2px">
        @RenderBody()
        <hr />

    </div>
    <footer class="justify-content-center mt-5" style="background-color: #E0E5F2; padding: 20px 0 0 0; margin-bottom:-17px">
        <div style="text-align:center;">
            <p style="font-size:12px"><i>&copy; @DateTime.Now.Year - My Student Management Application</i></p>
        </div>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
